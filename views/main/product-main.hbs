<div class="jumbotron">
  <div class="container">
    <h1 class="display-3 text-center">Shop Smart, Save Big!</h1>
    <h4 class="text-center mb-4">Find your favorite product</h4>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="input-group col-md-12">
          <input id="search" class="form-control input-lg" type="search"
            name="search_term" placeholder="Search...">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div id="searchResults" class="row">
    {{#each products}}
      <div class="col-md-4">
        <a href="/product/{{_id}}">
          <div class="card mb-3">
            <img class="card-img-top" src="{{image}}" alt="">
            <div class="card-body">
              <h4 class="card-title">{{name}}</h4>
              <p class="card-text">{{category.name}}</p>
              <p class="card-text">{{price}}</p>
            </div>
          </div>
        </a>
      </div>
    {{/each}}
  </div>

  <div class="row justify-content-center">
    <ul class="pagination">
      {{#forLoop 0 pages 1}}
        {{#ifCond ../page this}}
          <li class="page-item active">
            <span class="page-link">{{add ../this 1}}</span>
          </li>
        {{else}}
          <li class="page-item">
            <a class="page-link" href="/page/{{../this}}">{{add ../this 1}}</a>
          </li>
        {{/ifCond}}
      {{/forLoop}}
    </ul>
  </div>
</div>

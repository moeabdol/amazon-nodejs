<div class="container mt-3">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img src="{{user.profile.picture}}" alt="" class="rounded mx-auto d-block
      rounded-circle">
      <br />
      <p>Name: {{user.profile.name}}</p>
      <p>Email: {{user.email}}</p>

      {{#if user.address}}
        <p>Address: {{user.address}}</p>
      {{else}}
        <p>Address: <span class="text-muted">You have no address</span></p>
      {{/if}}

      <a href="/users/edit-profile" class="btn btn-primary btn-lg">
        Edit Profile
      </a>
    </div>
  </div>
</div>
